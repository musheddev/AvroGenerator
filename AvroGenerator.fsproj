        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="Generator.fs" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="build\Myriad.Plugins.props">
