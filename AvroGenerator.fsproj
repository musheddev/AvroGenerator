    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="Avro.FSharp" Version="0.4.0" />
      <PackageReference Include="Myriad.Core" Version="0.5.3" />
      <PackageReference Include="Myriad.Sdk" Version="0.5.3" />
    </ItemGroup>

</Project>
